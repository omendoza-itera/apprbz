<h1>Listing dishes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Picture</th>
    <th>Cost</th>
    <th>Company</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @dishes.each do |dish| %>
  <tr>
    <td><%= dish.name %></td>
    <td><%= dish.description %></td>
    <td><%= dish.picture %></td>
    <td><%= dish.cost %></td>
    <td><%= dish.company %></td>
    <td><%= link_to 'Show', dish %></td>
    <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
    <td><%= link_to 'Destroy', dish, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

